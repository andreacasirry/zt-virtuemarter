<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
    <name>ZtVirtuemarter</name>
    <creationDate>Feb 10, 2015</creationDate>
    <author>Zootemplate</author>
    <authorEmail>support@zootemplate.com</authorEmail>
    <authorUrl>http://www.zootemplate.com/</authorUrl>
    <copyright>Copyright (c) 2008 - 2015 ZooTemplate.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2 or later</license>

    <version>0.0.1</version>

    <description>Description of Zoo Virtuemart Component</description>

    <files>
        <folder>models</folder>
        <folder>views</folder>
        <folder>controllers</folder>
        <folder>template</folder>
        <filename>index.html</filename>
        <filename>router.php</filename>
        <filename>ztvirtuemarter.php</filename>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.com_ztvirtuemarter.ini</language>
    </languages>
    
    <install folder="admin">
        <sql>
            <file charset="utf8" driver="mysql">sql/install.sql</file>
        </sql>
    </install>
    <uninstall folder="admin">
        <sql>
            <file charset="utf8" driver="mysql">sql/uninstall.sql</file>
        </sql>
    </uninstall>
    <administration>
        <menu link="index.php?option=com_ztvirtuemarter">Zt Virtuemarter</menu>
        <files folder="admin">
            <filename>ztvirtuemarter.php</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
    </administration>
</extension>
